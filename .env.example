# ===========================================
# BIZZER NETWORK STACK - Environment Variables
# ===========================================

# Database
POSTGRES_DB=bizzer
POSTGRES_USER=bizzer
POSTGRES_PASSWORD=your_secure_password_here

# Django
SECRET_KEY=your_django_secret_key_here_min_50_chars
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com
DEBUG=False

# URLs
VITE_API_URL=http://localhost/api
VITE_AGENTS_URL=http://localhost/agents
CORS_ALLOWED_ORIGINS=http://localhost,http://localhost:3000

# LLM Provider (ollama, claude, openai)
LLM_PROVIDER=ollama

# Ollama Settings
OLLAMA_MODEL=gemma2:2b

# API Keys (only if using paid providers)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# Redis
REDIS_URL=redis://redis:6379/0

# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# Digital Ocean (for CI/CD deployment)
DO_HOST=
DO_USERNAME=root
DO_SSH_KEY=

# Email (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=True
